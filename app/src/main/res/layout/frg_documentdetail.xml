<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/IvbinData"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="256dp"
                    android:maxWidth="320dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_documents" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/tlDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Art:"
                        android:textColor="#444"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdocFK_TlkpDocTypes_Art"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/txt_gray"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bezeichnung:"
                        android:textColor="#444"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvfilLabel_Bezeichnung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/txt_gray"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beschreibung:"
                        android:textColor="#444"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvfilDescription_Beschreibung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/txt_gray"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wiedervorlage:"
                        android:textColor="#444"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdocReminder_Wiedervorlage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/txt_gray"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gültig ab:"
                        android:textColor="#444"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdocValidFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/txt_gray"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gültig bis:"
                        android:textColor="#444"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdocValidTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/txt_gray"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unterart:"
                        android:textColor="#444"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdocFK_TlkpDocTypeOptions_Unterart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/txt_gray"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Instandhaltung:"
                        android:textColor="#444"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="right|center_vertical"
                        android:id="@+id/tvdocIsMaintenance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/txt_gray"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vermietung:"
                        android:textColor="#444"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="right|center_vertical"
                        android:id="@+id/tvdocIsRentMgmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/txt_gray"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Betriebskosten:"
                        android:textColor="#444"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="right|center_vertical"
                        android:id="@+id/tvdocIsCostMgmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/txt_gray"
                        android:textStyle="bold" />
                </TableRow>


                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gebrauchsanweisung:"
                        android:textColor="#444"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdocIsOperatingManual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/txt_gray"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>